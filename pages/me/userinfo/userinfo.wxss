.bg-img{
  width: 750rpx;
  height: 600rpx;
}
.user-img{
  width: 200rpx;
  height: 200rpx;
  position: absolute;
  top: 370rpx;
  left: 30rpx;
  border-radius: 20rpx;
}
.edit{
  width:60rpx;
  height:60rpx;
  position: absolute;
  right: 60rpx;
}
.line{
  height: 20rpx;
  background: #DCDCDC;
}
.item{
  background-color: white;
  padding: 20rpx 40rpx;
  font-size: 32rpx;
}
.item view{
  height: 50rpx;
}
.item-icon{
  padding-bottom: 40rpx;
}
.item-icon view{
  height: 70rpx;
}
.item-icon image{
  width:40rpx;height:40rpx;padding-right:20rpx;
}
.item view text{
  font-size: 30rpx;
  color: #696969;
}
.user-name{
  font-size: 35rpx;
  padding-bottom: 10rpx;
}

.item-tz ,.item-hf,.item-sc,.item-bm{
  padding-top: 10rpx;
  float: left;
  width: 166rpx;
  text-align: center;  
}
.item-hf,.item-sc,.item-bm{
  border-left: #696969 solid 1rpx;
}

.grjs{
  padding: 20rpx 50rpx;  
}
.grjs :nth-child(1){
   font-size: 35rpx;
}
.grjs :nth-child(2){
   margin: 20rpx 0;
   padding: 10rpx;
   font-size: 30rpx;
   background: #696969;
   opacity: 0.3;
   line-height: 40rpx;
   color: white;
   border-radius: 20rpx;
}